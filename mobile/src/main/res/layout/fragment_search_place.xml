<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_indigo_500"
    tools:context="son.nt.here.fragment.SearchPlaceFragment">

    <EditText
        android:text="50 Cach Mang Thang 8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter place name or address"
        android:id="@+id/search_edt_keyword" />

    <ListView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_list_view"></ListView>

</LinearLayout>
